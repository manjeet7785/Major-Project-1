<% layout("/layouts/boilerplate") %>
  <!-- ===================CSS============================ -->
  <style>
    #filters {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
      background-color: #f8f9fa;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0, 0, 0, 0.12);
    }

    #filters .filter-group {
      display: flex;
      flex-wrap: nowrap;
      gap: 1rem;
      overflow-x: auto;
      max-width: calc(100% - 150px);
    }

    #filters .filter-group::-webkit-scrollbar {
      display: none;
    }

    .filter-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 90px;
      cursor: pointer;
      transition: transform 0.25s ease, color 0.25s ease;
      flex-shrink: 0;
    }

    .filter-item i {
      font-size: 32px;
      color: #444;
      background-color: #fff;
      padding: 14px;
      border-radius: 50%;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      transition: background-color 0.3s, color 0.3s;
    }

    .filter-item p {
      margin-top: 10px;
      font-size: 14px;
      color: #555;
      font-weight: 500;
      text-align: center;
    }

    .filter-item:hover i {
      background-color: #007bff;
      color: #000000;
    }

    .filter-item:hover p {
      color: #007bff;
      transform: scale(1.1);
    }

    .tax-toggle {
      flex-shrink: 0;
      margin-left: auto;
      display: flex;
      align-items: center;
      width: 140px;
      justify-content: flex-end;
      padding-left: 20px;
    }

    @media (max-width: 720px) {
      #filters {
        flex-direction: column;
        align-items: flex-start;
      }

      #filters>.filter-group {
        max-width: 100%;
        overflow-x: auto;
        margin-bottom: 15px;
      }

      .tax-toggle {
        width: 100%;
        justify-content: flex-start;
        padding-left: 0;
      }
    }
  </style>

  <div id="filters">
    <div class="filter-group">

      <div class="filter-item">
        <a href="/listings"><i class="ri-fire-line"></i></a>
        <p>Trading</p>
      </div>

      <div class="filter-item">
        <a href="/listings"><i class="ri-hotel-bed-fill"></i></a>
        <p>Rooms</p>
      </div>

      <div class="filter-item">
        <a href="/listings"><i class="ri-building-line"></i></a>
        <p>Iconic Cities</p>
      </div>

      <div class="filter-item">
        <a href="/listings"><i class="ri-home-9-fill"></i></a>
        <p>Home</p>
      </div>

      <div class="filter-item">
        <a href="/listings"><i class="ri-building-fill"></i></a>
        <p>Building</p>
      </div>

      <div class="filter-item">
        <a href="/listings"><i class="ri-water-flash-line"></i></a>
        <p>Amazing Pools</p>
      </div>
      <div class="filter-item">
        <a href="/listings"><i class="ri-landscape-line"></i></a>
        <p>Farms</p>
      </div>
      <div class="filter-item">
        <a href="/listings"><i class="ri-restaurant-2-line"></i></a>
        <p>Restaurant</p>
      </div>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault" />
        <label class="form-check-label" for="switchCheckDefault">Display After Taxes</label>
      </div>
    </div>
  </div>


  <h3 class="mt-3 mb-3">All Listening</h3>

  <div class=" mainCard  row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">


    <% for(let listing of Alllist) { %>

      <div class="card" style="width: 20rem;">
        <a class="listlink" href="/listings/<%= listing._id %> ">
          <img src="<%= listing.image.url %>" class=" card-img-top " style="height: 20rem;" alt="...">

          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b>
              <br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>
                <i id="taxInfo" style="display: none;"> +18% GST</i>
            </p>
          </div>
        </a>
      </div>
      <% } %>
  </div>


  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementById("taxInfo");
      if (taxInfo.style.display !== "inline") {
        taxInfo.style.display = "inline";
      } else {
        taxInfo.style.display = "none";
      }
      console.log("Clicked");
    });
  </script>